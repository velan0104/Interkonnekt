{
  "compilerOptions": {
    "target": "ESNext", // or ES6 if you want compatibility
    "module": "ESNext", // Ensures TypeScript generates ES module syntax
    "moduleResolution": "node", // Resolve modules like Node.js
    "esModuleInterop": true, // Allows default imports from CommonJS
    "strict": true, // Enforce strict type-checking
    "skipLibCheck": true, // Skips type-checking of declaration files
    "outDir": "./dist", // Where compiled JS files go
    "baseUrl": ".", // Root directory for relative imports
    "paths": {
      "*": ["node_modules/*"]
    },
    "allowJs": true // If you're mixing JS with TS
  },
  "include": ["src/**/*"], // Include all source files
  "exclude": ["node_modules"] // Exclude node_modules
}
